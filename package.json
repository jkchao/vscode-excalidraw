{
	"name": "vscode-excalidraw-plugin",
	"displayName": "Excalidraw VSCode Plugin",
	"description": "excalidraw vscode plugin",
	"version": "0.0.4",
	"publisher": "jkchao",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jkchao/vscode-excalidraw.git"
	},
	"icon": "images/logo.png",
	"author": "jkchao",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jkchao/vscode-excalidraw/issues"
	},
	"homepage": "https://github.com/jkchao/vscode-excalidraw#readme",
	"contributes": {
		"customEditors": [
			{
				"viewType": "excalidraw.openEditor",
				"displayName": "excalidraw",
				"selector": [
					{
						"filenamePattern": "*.excalidraw"
					}
				]
			}
		]
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCustomEditor:excalidraw.openEditor"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"postinstall": "cd excalidraw && yarn",
		"build:excalidraw": "cd excalidraw && yarn build",
		"vscode:prepublish": "npm run build:excalidraw && webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"lint-staged": {
		"*.{js,ts,html,md}": [
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-angular": "^8.3.4",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"html-loader": "^1.1.0",
		"husky": ">=4",
		"lint-staged": ">=10",
		"mocha": "^7.1.2",
		"prettier": "^2.0.5",
		"raw-loader": "^4.0.1",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "4.42.0",
		"webpack-cli": "^3.3.11"
	}
}
